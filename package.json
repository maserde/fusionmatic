{
  "name": "fusion-host",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "dev": "pnpm run build:dev && concurrently -k \"pnpm run watch:ts\" \"pnpm run watch:alias\" \"pnpm run watch:run\"",
    "watch:ts": "tsc --watch --project tsconfig.dev.json",
    "watch:alias": "tsc-alias --watch --project tsconfig.dev.json",
    "watch:run": "sleep 2 && nodemon --watch dist --delay 500ms --exec \"node -r tsconfig-paths/register\" dist/index.js",
    "build": "tsc && tsc-alias",
    "build:dev": "tsc --project tsconfig.dev.json && tsc-alias",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "typecheck:dev": "tsc --noEmit --project tsconfig.dev.json",
    "start": "node -r tsconfig-paths/register dist/index.js",
    "start:prod": "node dist/index.js",
    "prebuild": "pnpm run clean",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.17.1",
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.6.2",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "axios": "^1.12.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.0",
    "winston": "^3.18.3"
  }
}